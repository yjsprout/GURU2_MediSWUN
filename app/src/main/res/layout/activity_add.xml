<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Add">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent">

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/alarmplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:backgroundTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView1"
                app:srcCompat="@android:drawable/ic_input_add"
                app:tint="@color/white"></com.google.android.material.floatingactionbutton.FloatingActionButton>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageView
            android:id="@+id/add_home"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_home_24"
            android:clickable="true"
            tools:ignore="SpeakableTextPresentCheck"
            app:tint="@color/black">
        </ImageView>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_add_box_24"
            app:tint="@color/icon_highlight"></ImageView>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageView
            android:id="@+id/add_calender"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:clickable="true"
            tools:ignore="SpeakableTextPresentCheck"
            android:src="@drawable/baseline_calendar_month_24"
            app:tint="@color/black">
        </ImageView>

        <LinearLayout
            android:layout_width="33dp"
            android:layout_height="match_parent">
        </LinearLayout>

    </LinearLayout>


</LinearLayout>